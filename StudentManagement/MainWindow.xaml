                            <Border Margin="5"
                                    Background="#FF52B6B0"
                                    Opacity="0.8"
                                    BorderBrush="#FF52B6B0"
                                    BorderThickness="3"
                                    CornerRadius="5">
                                <Button FontSize="20"
                                        Width="150"
                                        Foreground="White"
                                        Content="Quit"
                                        VerticalContentAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Padding="0,1,0,0"
                                        Command="{Binding QuitCommand}"
                                        CommandParameter="{Binding ElementName=MainWD}">

                                </Button>
                            </Border>
                            <Border Margin="5"
                                    Background="#FF52B6B0"
                                    Opacity="0.8"
                                    BorderBrush="#FF52B6B0"
                                    BorderThickness="3"
                                    CornerRadius="5">
